<% if(locals.lastVisit) {%>
<div class="alert alert-primary" role="alert">
   You are last visited on <%= locals.lastVisit %>
</div>
<% } %>

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
      <th scope="col" class="text-center">Action</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(product => { %>
    <tr>
      <th><%= product.id %></th>
      <td><%= product.name %></td>
      <td><%= product.desc %></td>
      <td><%= product.price %></td>
      <td>
        <img src="<%= product.imageUrl %>" alt="product-image" width="100" />
      </td>
      <td class="d-flex justify-content-evenly">
        <a href="/update/<%= product.id %>" class="btn btn-warning">Update</a>
        <button
          class="btn btn-danger"
          onclick="deleteProduct('<%= product.id %>')"
        >
          Delete
        </button>
        <!-- <a href="/delete/<%= product.id %>" class="btn btn-danger">Delete</a> -->
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
